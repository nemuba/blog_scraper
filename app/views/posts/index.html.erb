<%= turbo_frame_tag :posts do %>
  <div class="card mt-3">
    <div class="card-header bg-white">
      <h3 class="card-title">Posts</h3>
    </div>
    <div class="card-body">
    <div class="row align-items-start">
        <div class="col-2">
          <%= link_to 'Listar tudo', posts_path(site_name: params[:site_name]), 'data-turbo-frame': 'posts', class: 'btn btn-primary bnt-sm' %>
        </div>
        <div class="col-2">
          <%= turbo_frame_tag :tags, src: tags_path(site_name: params[:site_name]), loading: 'lazy' %>
        </div>
        <div class="col-8"></div>
      </div>
      <%= render @posts %>
    </div>
  </div>
<% end %>
